<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#7c000000">
        <ImageView 
            android:id="@+id/pick_finish_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/webviewtab_back_normal"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="14dp"/>
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_toRightOf="@id/pick_finish_back_btn"
            android:layout_margin="@dimen/activity_horizontal_margin">
        </View>
        <TextView 
            android:layout_toRightOf="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="图片"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>
        <Button 
            android:id="@+id/pick_finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:text="完成"
            android:textSize="13sp"
            android:clickable="false"
            android:textColor="@android:color/white"
            android:background="@drawable/common_shape_blue_btn"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>